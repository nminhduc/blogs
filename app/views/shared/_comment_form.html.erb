<% if  logged_in? && (@user.following?(@entry.user) || @user.id == @entry.user.id ) %>
    <%= form_for(@comment) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <strong><%= f.label :content, value: "Comment:" %></strong>
          <%= f.text_field :content, placeholder: "Comment", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.hidden_field :user_id, value: @user.id %>
        </div>

        <div class="form-group">
          <%= f.hidden_field :entry_id, value: @entry.id %>
        </div>

        <div>
          <%= f.submit "Post Comment", class: "btn btn-primary" %>
        </div>
    <% end %>
<% end %>